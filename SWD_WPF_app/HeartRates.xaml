        </ListBox>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="27" Margin="10,96,0,0" TextWrapping="Wrap" Text="HeartRate Sample" VerticalAlignment="Top" Width="184" Foreground="#FF00A3FF" FontSize="22" FontFamily="Bodoni MT" FontWeight="Bold"/>
    </Grid>
</Page>
