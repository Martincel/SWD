<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="SWD" Height="450" Width="800" MaxHeight="450" MaxWidth="800">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Height="35" TextWrapping="Wrap" Text="Smartwatch data" FontSize = "36"
         FontWeight = "Bold" VerticalAlignment="Top" Width="332" FontFamily="Bodoni MT" TextAlignment="Center" FontStyle="Normal"
                   TextDecorations="{x:Null}" Foreground="#FF00ACDC" MaxWidth="332" />
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10,10,10,0" Height="39">
            <Button Content="Workouts" Width="60" Height="32" Click="OpenPageWorkouts" />
            <Button Content="Sleeps" Margin="10,0,0,0" Width="60" Height="32" Click="OpenPageSleeps"/>
            <Button Content="HeartRates" Margin="490,0,0,0" Width="70" Height="32" Click="OpenPageHeartRates"/>
            <Button Content="Info" Margin="10,0,0,0" Width="60" Height="32" Click="OpenPageInfo"/>
        </StackPanel>
        <Frame x:Name="MainFrame" Margin="0,48,0,0" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
